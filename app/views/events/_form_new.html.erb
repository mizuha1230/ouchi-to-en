<div class="row">
      <%= form_with(model: @event, url: events_path, remote: true, local: false) do |f| %>

        <%= f.label :title, "行事"%>
        <%= f.text_field :title, class:'form-control mb-3', required: true %> 

        <div class="form-inline text-left">
         <%= f.label :start,"開始", {class:'control-label'}%>
         <%= f.datetime_select :start, {default: Date.today + 0.hours + 00.minutes, minute_step: 05}, class: 'form-control' %>
        </div>
         <br>
        <div class="form-inline text-left"> 
         <%= f.label :end_time,"終了", {class:'control-label'}%>
         <%= f.datetime_select :end_time, {default: Date.today + 0.hours + 00.minutes, minute_step: 05}, class: 'form-control' %>
        </div>

        <%= f.submit "登録", class: "btn btn-primary js-event-create-btn" %>
      <% end %>
</div> 