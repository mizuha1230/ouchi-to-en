<!DOCTYPE html>
<html>
  <head>
    <title>OuchiToEn</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/3.18.1/build/cssreset/cssreset-min.css">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to "ホーム",root_path, class:"btn btn-outline-secondary" %>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "連絡ルーム",rooms_index_path, class:"btn btn-outline-warning" %>
          </li>
          <li class="nav-item">
            <%= link_to "ログアウト",destroy_user_session_path, method: :delete, class:"btn btn-outline-danger" %>
          </li>
        <% else%>
          <li class="nav-item">
            <%= link_to "新規登録",new_user_registration_path, class:"btn btn-outline-primary" %>
          </li>
          <li class="nav-item">
            <%= link_to "ログイン",new_user_session_path, class:"btn btn-outline-success" %>
          </li>
        <% end %>
        <% if user_signed_in? && current_user.id == 1 %>
        <li class="nav-item">
          <%= link_to "投稿する",new_activity_path, class:"btn btn-primary" %>
        </li>
        <% end %>
      </ul>
    </div>
    </nav>
    <%= yield %>
  </body>
</html>
