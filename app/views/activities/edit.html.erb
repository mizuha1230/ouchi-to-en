<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">＊活動内容編集＊</h2>
        <%= form_with model: @activity, local: true do |f|%>
        <%= render 'layouts/error_messages', model: f.object %>
          <div class="field">
            <%= f.label :image, "・・・画像・・・", class: :label__title %><br />
            <%= f.file_field :image, class: :form__image, id:"en_image" %>
          </div>

          <div class="field">
            <%= f.label :activity_content, "・・・今日の様子・・・", class: :label__title %><br />
            <%= f.text_area :activity_content, rows: "10", class: :form__text, id:"en_activity_content" %>
          </div>

          <div class="field">
            <%= f.label :contact, "・・・連絡事項・・・", class: :label__title %><br />
            <%= f.text_area :contact, rows: "3", class: :form__text, id:"en_contact" %>
          </div>

          <div class="actions">
            <%= f.submit "投稿する", class: :form__btn  %>
          </div>
        <% end %>
    </div>
  </div>
</div>