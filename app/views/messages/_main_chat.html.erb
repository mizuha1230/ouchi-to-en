<div class="chat-header">
  <div class="left-header">
    <div class="header-title">
      ＊<%= @room.room_name %>さんの連絡ルーム＊
    </div>
  </div>
  <div class="right-header">
    <div class="header-button">
      <a class="btn btn-danger" href="#">ルームを終了する</a>
    </div>
  </div>
</div>

<div class="messages">
  <%= render partial: 'message', collection: @messages %>
</div>

<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.collection_select(:heat_id, Heat.all, :id, :name, {}, {class:"form-control", id:"select-box"}) %>
    <%= f.collection_select(:condition_id, Condition.all, :id, :name, {}, {class:"form-control", id:"select-box"}) %>
    <%= f.text_area :content, class: "form-control", placeholder:"メッセージを入力", id:"content", rows:"3" %>
    <label class="form-image">
      <span class="btn btn-outline-dark">画像</span>
      <%= f.file_field :image, class: "hidden" %>
    </label>
  </div>
  <%= f.submit '送信', class:"btn btn-info"%>
<% end %>