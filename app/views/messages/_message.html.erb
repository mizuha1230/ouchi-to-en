<div class="message">
  <div class="upper-message">
    <div class="message-user">
      <%= message.user.name %>
    </div>
    <div class="message-date">
      <%= message.created_at %>
    </div>
    <div class="message-heat">
      <%= message.heat.name %>
    </div>
    <div class="message-condition">
      <%= message.condition.name %>
    </div>
  </div>
  <div class="lower-message">
    <div class="message-content">
      <%= message.content %>
    </div>
  </div>
</div>